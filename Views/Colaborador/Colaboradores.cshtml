@model IEnumerable<ProjetoInter.Models.Funcionario>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var funcionarioLogado = ViewBag.FuncionarioLogado as ProjetoInter.Models.Funcionario;
    var listaInstituicoes = ViewBag.ListaInstituicoesCadastradas as List<ProjetoInter.Models.Instituicao>;
    var statuslista = ViewBag.StatusLista as List<ProjetoInter.Models.StatusFuncionario>;
}

@section Styles
{
    <link rel="stylesheet" href="/css/TelaColaborador.css">
}

@section Scripts
{
    <script src="~/js/Modais/Modais.js"></script>
    <script src="~/js/Colaboradores/Colaboradores.js"></script>

    <script>
        window.onload = function () 
        {
            var mostrarModal = '@(ViewBag.MostrarModal ?? "false")';
        
            if (mostrarModal === "True") {
                ModalNovo(); 
            }

            document.querySelectorAll('.select-checkbox').forEach(cb => {
                cb.addEventListener('change', function () {
                    if (this.checked) {
                        document.querySelectorAll('.select-checkbox').forEach(other => {
                            if (other !== this) other.checked = false;
                        });
                    }
                });
            });
        };

        function carregarDadosColaboradorSelecionado() {
            const checkbox = document.querySelector(".select-checkbox:checked");

            if (!checkbox) {
                alert("Selecione um colaborador para editar.");
                return;
            }

            const id = checkbox.dataset.id;
            const nome = checkbox.dataset.nome;
            const cpf = checkbox.dataset.cpf;
            const cargo = checkbox.dataset.cargo;
            const telefone = checkbox.dataset.telefone;
            const status = checkbox.dataset.status;

            document.getElementById("editar-id").value = id;
            document.getElementById("editar-nome").value = nome;
            document.getElementById("editar-cpf").value = cpf;
            document.getElementById("editar-cargo").value = cargo;
            document.getElementById("editar-telefone").value = telefone;
            document.getElementById("editar-status").value = status;

            ModalEditarNovo();
        }
    </script>
}

@section HeaderBarras {
    <div class="Header">
        <div class="ConteudoHeader">
            <h1 class="NomePagina">Colaboradores</h1>
            
                <form method="get" asp-controller="Colaborador" asp-action="Colaboradores" class="Barrabusca">
                    <input type="text" name="busca" placeholder="Pesquisar..." class="TextoPesquisa" value="@(Context.Request.Query["busca"])">
                    <button class="BotaoIconePesquisa" aria-label="Pesquisar">
                        <i class="fas fa-search" aria-hidden="true"></i>
                    </button>
                </form>
            
            @if (funcionarioLogado != null && funcionarioLogado.IsAdmin == true)
            {
                <div class="BotoesAcoes">
                    <button class="BotaoExcluir">Excluir</button>
                    <button onclick="carregarDadosColaboradorSelecionado()" class="BotaoEditar">Editar</button>
                    <button onclick="ModalNovo()" class="BotaoNovo">Novo</button>
                </div>
            }
        </div>
    </div>
}

<section>

    @if (ViewBag.Sucesso != null)
    {
        <section class="Mensagem show sucesso" id="mensagemSucesso" role="alert">
            <p id="mensagemTexto">
                <i class="fa fa-check-square" style="color: green; margin-right: 8px; padding-left: 20px; font-size: 20px;"></i>@ViewBag.Sucesso</p>
        </section>
    }

    @if (ViewBag.Erro != null)
    {
        <section class="Mensagem show erro" id="mensagemErro" role="alert">
            <p id="mensagemTexto">
                <i class="fas fa-exclamation-circle" style="color: red; margin-right: 8px; padding-left: 20px; font-size: 20px;"></i>@ViewBag.Erro</p>
        </section>
    }

    <div class="colaboradores-list">
        @if (Model != null && Model.Any())
        {
            foreach (var funcionario in Model)
            {
                <div class="colaborador-card">
                    <div class="colaborador-foto">
                        <img src="~/@funcionario.ImagemUrl" alt="Foto" />
                    </div>
    
                    <div class="colaborador-info">
                        <p>@funcionario.Cargo</p>
                        <div class="colaborador-descricao">
                            <div style="display: flex; gap: 30px; align-items: center;">
                                <strong>@funcionario.Nome</strong>
                                <span>Id: @funcionario.FuncionarioId</span>
                            </div>
                            <div style="display: flex; gap: 10px; align-items: center;">
                                <span>@funcionario.Cpf |</span>
                                <span> @funcionario.Telefone</span>
                            </div>
                           
                        </div>
                    </div>
    
                <div class="colaborador-select">
                    <input type="checkbox" id="select-@funcionario.FuncionarioId" class="select-checkbox"
                        data-id="@funcionario.FuncionarioId"
                        data-nome="@funcionario.Nome"
                        data-cpf="@funcionario.Cpf"
                        data-cargo="@funcionario.Cargo"
                        data-telefone="@funcionario.Telefone"
                        data-imagem="@funcionario.ImagemUrl"
                        data-admin="@funcionario.IsAdmin"
                        data-status="@funcionario.StatusFuncionarioId"/>
                    <label for="select-@funcionario.FuncionarioId" aria-label="Selecionar colaborador"></label>
                </div>
                    
                </div>
            }
        }
        else
        {
            <p>Nenhum colaborador encontrado.</p>
        }
    </div>
</section>

<section class="area-modal-editar" id="modal-editar">
    <div class="modal-base">
       <form method="post" asp-action="EditarColaborador" asp-controller="Colaborador" id="formEditar">
            <input type="hidden" id="editar-id" name="FuncionarioId" />

            <div class="secaoAcao">
                <label for="editar-nome">Nome:</label>
                <input type="text" id="editar-nome" name="Nome" class="inputTexto" required />
            </div>

            <div class="secaoAcao">
                <label for="editar-cargo">Cargo:</label>
                <input type="text" id="editar-cargo" name="Cargo" class="inputTexto" required />
            </div>

            <div class="secaoAcao">
                <label for="editar-status">Status:</label>
                <select id="editar-status" name="StatusFuncionarioId">
                    @if (statuslista != null)
                    {
                        foreach (var status in statuslista)
                        {
                            <option value="@status.StatusFuncionarioId">@status.Descricao</option>
                        }
                    }
                    else
                    {
                        <option disabled>Erro ao carregar status</option>
                    }
                </select>
            </div>

            <div class="DivBotao">
                <button type="submit">Salvar Alterações</button>
            </div>
        </form>
    </div>
</section>

<section class="area-modal-novo" id="modal-novo">
    
    <div class="modal-base">
        <button class="modal-close" onclick="FecharModalNovo()" type="button">
            <i class="fas fa-times"></i>
        </button>

        <h1>Cadastrar Novo Usuário</h1>

        <form asp-action="NovoUsuario" asp-controller="Colaborador" method="post" enctype="multipart/form-data" id="formImagem">
            <div class="divisaoDiv">
                <div class="secaoAcao">
                    <label for="email">Email:</label>
                    <input type="email" id="_email" name="_email" class="inputTexto" placeholder="exemplo@gmail.com" required />
                </div>

                <div class="secaoAcao">
                    <label for="password">Senha:</label>
                    <input type="password" id="_password" name="_password" class="inputTexto" placeholder="******" required />
                </div>
            </div>

            <div class="divisaoDiv">
                <div class="secaoAcao">
                    <label for="password">Nome:</label>
                    <input type="text" name="_nome" class="inputTexto" placeholder="Exemplo" required />
                </div>

                <div class="secaoAcao">
                    <label for="password">CPF:</label>
                    <input type="text" name="_cpf" class="inputTexto" placeholder="000.000.000-00" required /> 
                </div>
            </div>

            <div class="divisaoDiv">
                <div class="secaoAcao">
                    <label for="password">Cargo:</label>
                    <input type="text" name="_cargo" class="inputTexto" placeholder="Cuidador" required />
                </div>
                
                 <div class="secaoAcao">
                    <label for="password">Telefone: </label>
                    <input type="text" name="_telefone" class="inputTexto" placeholder="(00) 0000-0000" required/>
                </div>
            </div>

             <div class="divisaoDiv">
                <div class="secaoAcao">
                    <label for="checkAdm">Administrador?</label>
                    <input type="checkbox" name="_adm" value="true" class="inputTexto" id="checkAdm" />
                </div>
                <div class="secaoAcao">
                    <label for="password">Instituicao:</label>
                    @if (listaInstituicoes != null)
                    {
                        <select name="_instituicao" class="inputTexto" required>
                            <option value="">Selecione uma Instituição</option>
                            @foreach (var instituicao in listaInstituicoes)
                            {
                                <option value="@instituicao.InstituicaoId">@instituicao.Nome</option>
                            }
                        </select>
                    }
                    else
                    {
                        <p style="color:red;">Erro ao carregar lista de instituições.</p>
                    }
                             </div>
             </div>

          <div class="form-linha form-imagem">
            <label for="imagemInput">Imagem:</label>
            <div id="previewContainer" onclick="document.getElementById('imagemInput').click();">
                <span id="previewText">Clique para selecionar uma imagem</span>
                <img id="preview" style="display:none;" />
            </div>
            <input type="file" id="imagemInput" name="_imagem" onchange="mostrarPreviewEditar(event)" style="display: none;" />
        </div>

            <div class="DivBotao">
                <button type="submit" id="BotaoCadastrar">CADASTRAR</button>
            </div>
        </form>
    </div>
</section>