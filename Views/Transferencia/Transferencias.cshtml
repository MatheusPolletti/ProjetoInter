@using ProjetoInter.Models
@model IEnumerable<ProjetoInter.Models.Transferencia>
    
@section Styles
{
    <link rel="stylesheet" href="/css/TelaAtendimentoVeterinario.css">
}

@section Scripts
{
    <script src="~/js/Modais/Modais.js"></script>
}

@{
    Layout="~/Views/Shared/_Layout.cshtml";
}

@section HeaderBarras
{
    <div class="Header">
        <div class="ConteudoHeader">

            <h1 class="NomePagina">Transferências</h1>
            
            <div class="Barrabusca">
                <input type="text" placeholder="Pesquisar..." class="TextoPesquisa">
                <button class="BotaoIconePesquisa" aria-label="Pesquisar">
                    <i class="fas fa-search" aria-hidden="true"></i>
                </button>    
            </div>
            
            <div class="BotoesAcoes">
                <button class="BotaoExcluir">Excluir</button>
                <button onclick="ModalEditarNovo()" class="BotaoEditar">Editar</button>
                <button onclick="ModalNovo()" class="BotaoNovo">Novo</button>
            </div>
        
        </div>
    </div>
}

<div class="container-atendimentos">
    <div class="topo">
        <h2>Pendentes</h2>
        <div class="container-botoes">
            <div class="botoes-carrossel">
                <i class="fa-solid fa-chevron-left" onclick="moveEsquerda()"></i>
                <i class="fa-solid fa-chevron-right" onclick="moveDireita()"></i>
            </div>
        </div>
        <div class="container-carrossel">
            <div class="carrossel-cards-verticais">
                @if (Model != null)
                {
                    foreach (var transferencia in Model)
                    {
                       <div>
                                <div class="card-vertical">
                                    
                                    <input
                                    type="checkbox" 
                                    class="atendimento-checkbox"
                                    data-atendimentoid="@transferencia.TransferenciaId" 
                                    onclick="verificaCheckboxes()"
                                    />
                                    <div style="display: flex; height: fit-content; margin-top: -24px">
                                        <div class="topo-esquerda">
                                            <h4><strong></strong> @transferencia.Animal.Nome</h4>
                                            <p><small>@transferencia.Animal.Especie?.Descricao |
                                                    @transferencia.Animal.Setor?.Descricao</small></p>
                                        </div>
                                    </div>
                                    <div class="descricao">
                                        <h4>Origem: <span style="font-weight: normal;">@transferencia.InstituicaoOrigem.Nome</span></h4>
                                        <h4>Destino: <span style="font-weight: normal;">@transferencia.InstituicaoDestino.Nome</span></h4>
                                        <small><strong>Saída:</strong> @transferencia.DataSaida</small>
                                        <small><strong>Entrada:</strong> @transferencia.DataEntrada</small>
                                    </div>
                                    <button class="btn-concluir">Concluir</button>
                                </div>
                            </div>

                    }
                }
            </div>

        </div>

    </div>
</div>
<div class="inferior">
    <h2>Atendimentos Anteriores</h2>
    <div class="cards-horizontais">
        @if (Model != null)
        {
            foreach (var transferencia in Model)
            {
                @* <a style="text-decoration: none;" asp-controller="AtendimentoVeterinario" asp-action="AtendimentoInfo" asp-route-id="@transferencia.TransferenciaId" class="card-link"> *@
                    <div style="display: flex; justify-content: space-between;" class="card-horizontal" id="@transferencia.TransferenciaId">
                        <div>
                            <small>@transferencia.Animal.Especie.Descricao</small>
                            <h4>@transferencia.Animal.Nome</h4>

                            <small><strong>Origem:</strong> @transferencia.InstituicaoOrigem.Nome</small>
                            <small><strong> | Destino:</strong> @transferencia.DataSaida</small>
                            <br>
                            <small><strong>Saída:</strong> @transferencia.InstituicaoOrigem.Nome</small>
                            <small><strong> | Chegada:</strong> @transferencia.DataEntrada</small>
                        </div>
                        <div>
                            <small>Colocar Status</small>
                        </div>
                    </div>
                @* </a> *@
            }
        }

    </div>
</div>

<section class="area-modal-editar">
    <div class="modal-base">
        <button class="modal-close" onclick="FecharModalEditar()">
            <i class="fas fa-times"></i>
        </button>

        <h1>Editar Setor</h1>

        <div class="secaoAcao">
            <label>Nome:</label>
            <input type="text" class="inputTexto" />
        </div>

        <div class="secaoAcao">
            <label>Descrição:</label>
            <input type="text" class="inputTexto" />
        </div>

        <div class="secaoAcao">
            <label for="editar-status">Status:</label>
            <select id="editar-status" name="editar-status">
                <option value="ativo">Ativo</option>
                <option value="inativo">Inativo</option>
            </select>
        </div>

        <button onclick="">Salvar Alterações</button>
    </div>
</section>

<section class="area-modal-novo">
    <div class="modal-base">
        <button class="modal-close" onclick="FecharModalNovo()">
            <i class="fas fa-times"></i>
        </button>

        <h1>Adicionar Setor</h1>

        <div class="secaoAcao">
            <label>Nome:</label>
            <input type="text" class="inputTexto" />
        </div>

        <div class="secaoAcao">
            <label>Descrição:</label>
            <input type="text" class="inputTexto" />
        </div>

        <div class="secaoAcao">
            <label for="novo-status">Status:</label>
            <select id="novo-status" name="novo-status">
                <option value="ativo">Ativo</option>
                <option value="inativo">Inativo</option>
            </select>
        </div>

        <button onclick="">Adicionar</button>
    </div>
</section>