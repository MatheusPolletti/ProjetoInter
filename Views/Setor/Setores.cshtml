@model IEnumerable<ProjetoInter.Models.Setor>

@section Styles
{
    <link rel="stylesheet" href="/css/TelaSetor.css">
}

@section Scripts
{
    <script src="~/js/Modais/Modais.js"></script>
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeaderBarras
{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <div class="Header">
        <div class="ConteudoHeader">

            <h1 class="NomePagina">Setores</h1>

            <div class="Barrabusca">
                <input type="text" placeholder="Pesquisar..." class="TextoPesquisa">
                <button class="BotaoIconePesquisa" aria-label="Pesquisar">
                    <i class="fas fa-search" aria-hidden="true"></i>
                </button>
            </div>

            <div class="BotoesAcoes">
                <button class="BotaoExcluir">Excluir</button>
                <button onclick="ModalEditarNovo()" class="BotaoEditar">Editar</button>
                <button onclick="ModalNovo()" class="BotaoNovo">Novo</button>
            </div>

        </div>
    </div>
}

<div class="container-setores">
    <div class="esquerda">
        @if (Model != null)
        {
            foreach (var setor in Model)
            {
                <div class="card-setores">
                    <div class="textos">
                        <h1 class="nomeSetor">@setor.Nome</h1>
                        <p><strong>Descrição:</strong> @setor.Descricao</p>
                    </div>
                    <div class="card-end">
                        <h3>ID: @setor.SetorId</h3>
                        <input type="checkbox">
                    </div>
                </div>
            }
        }
    </div>

    <!--Classe não usada-->
    <div>
        <!-- O ~ é o que permite o acesso as imagens-->
        <img src="~/img/Instituicao/Zoobotanico.png" alt="Mapa do Zoobotânico de Rio Preto">
        <div class="legenda">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Excepturi sint, sed possimus dolorum laboriosam
            laborum vero ut officia maiores eum corporis quisquam in, iusto delectus sit! Odio at eligendi laborum.
        </div>
    </div>
</div>
</div>

<section class="area-modal-editar">
    <div class="modal-base">
        <button class="modal-close" onclick="FecharModalEditar()">
            <i class="fas fa-times"></i>
        </button>

        <h1>Editar Setor</h1>

        <div class="secaoAcao">
            <label>Nome:</label>
            <input type="text" class="inputTexto" />
        </div>

        <div class="secaoAcao">
            <label>Descrição:</label>
            <input type="text" class="inputTexto" />
        </div>

        <div class="secaoAcao">
            <label for="editar-status">Status:</label>
            <select id="editar-status" name="editar-status">
                <option value="ativo">Ativo</option>
                <option value="inativo">Inativo</option>
            </select>
        </div>

        <button onclick="">Salvar Alterações</button>
    </div>
</section>

<section class="area-modal-novo">
    <div class="modal-base">
        <button class="modal-close" onclick="FecharModalNovo()">
            <i class="fas fa-times"></i>
        </button>

        <h1>Adicionar Setor</h1>

        <div class="secaoAcao">
            <label>Nome:</label>
            <input type="text" class="inputTexto" />
        </div>

        <div class="secaoAcao">
            <label>Descrição:</label>
            <input type="text" class="inputTexto" />
        </div>

        <div class="secaoAcao">
            <label for="novo-status">Status:</label>
            <select id="novo-status" name="novo-status">
                <option value="ativo">Ativo</option>
                <option value="inativo">Inativo</option>
            </select>
        </div>

        <button onclick="">Adicionar</button>
    </div>
</section>