@model IEnumerable<ProjetoInter.Models.Setor>

@section Styles
{
    <link rel="stylesheet" href="/css/TelaSetor.css">
}

@section Scripts
{
    <script src="~/js/Modais/Modais.js"></script>
    <script src="~/js/Setor/SetorScript.js"></script>
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeaderBarras
{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <div class="Header">
        <div class="ConteudoHeader">

            <h1 class="NomePagina">Setores</h1>

            <div class="Barrabusca">
                <input type="text" placeholder="Pesquisar..." class="TextoPesquisa">
                <button class="BotaoIconePesquisa" aria-label="Pesquisar">
                    <i class="fas fa-search" aria-hidden="true"></i>
                </button>
            </div>

            <div class="BotoesAcoes">
                <button class="BotaoExcluir" onclick="excluirSetoresSelecionados()" disabled>Excluir</button>
                <button onclick="abrirModalEditarSetor()" class="BotaoEditar" disabled>Editar</button>
                <button onclick="abrirModalNovoSetor()" class="BotaoNovo">Novo</button>
            </div>

        </div>
    </div>
}

<div class="container-setores">
    <div class="esquerda">
        @if (Model != null)
        {
            foreach (var setor in Model)
            {
                <div class="card-setores">
                    <div class="textos">
                        <h3 class="nomeSetor">@setor.Nome</h3>
                        <p><strong>Descrição:</strong> @setor.Descricao</p>
                    </div>
                    <div class="card-end">
                        <h3>ID: @setor.SetorId</h3>
                        <input type="checkbox" class="setor-checkbox" data-setorid="@setor.SetorId" onclick="verificaCheckboxesSetor()">
                    </div>
                </div>
            }
        }
    </div>

    
    <div>
        <img src="/@(Model?.FirstOrDefault()?.InstituicaoPertence?.ImagemUrl ?? "caminho/para/imagem/padrao.png")" alt="Mapa da Instituição">
        <div class="legenda">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Excepturi sint, sed possimus dolorum laboriosam
            laborum vero ut officia maiores eum corporis quisquam in, iusto delectus sit! Odio at eligendi laborum.
        </div>
    </div>
    
</div>
</div> <section class="area-modal-editar">
    <div class="modal-base">
        <button class="modal-close" onclick="FecharModalEditarSetor()">
            <i class="fas fa-times"></i>
        </button>

        <h1>Editar Setor</h1>
        <input type="hidden" id="inputSetorIdEditar" value="0" />

        <div class="secaoAcao">
            <label>Nome:</label>
            <input type="text" id="inputSetorNomeEditar" class="inputTexto" />
        </div>

        <div class="secaoAcao">
            <label>Descrição:</label>
            <input type="text" id="inputSetorDescricaoEditar" class="inputTexto" />
        </div>

        <div class="secaoAcao">
            <label for="selectSetorStatusEditar">Status:</label>
            <select id="selectSetorStatusEditar" name="selectSetorStatusEditar">
                <option value="true">Ativo</option> <option value="false">Inativo</option> </select>
        </div>

        <button class="btn-concluir" onclick="submeterEditarSetor()">Salvar Alterações</button>
    </div>
</section>

<section class="area-modal-novo">
    <div class="modal-base">
        <button class="modal-close" onclick="FecharModalNovoSetor()">
            <i class="fas fa-times"></i>
        </button>

        <h1>Adicionar Setor</h1>

        <div class="secaoAcao">
            <label>Nome:</label>
            <input type="text" id="inputSetorNomeNovo" class="inputTexto" />
        </div>

        <div class="secaoAcao">
            <label>Descrição:</label>
            <input type="text" id="inputSetorDescricaoNovo" class="inputTexto" />
        </div>

        <div class="secaoAcao">
            <label for="selectSetorStatusNovo">Status:</label>
            <select id="selectSetorStatusNovo" name="selectSetorStatusNovo">
                <option value="true">Ativo</option> <option value="false">Inativo</option> </select>
        </div>

        <button class="btn-concluir" onclick="submeterNovoSetor()">Adicionar</button>
    </div>
</section>