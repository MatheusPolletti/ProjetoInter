@model List<ProjetoInter.Models.Usuario>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=devie-width, initial-scale=1.0">
    <title>GerenciaZoo</title>
</head>
<body>
    <h1>Bem vindo ao GerenciaZoo</h1>

    <table class="table"></table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Data de Nascimento</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.UsuarioId</td>
                <td>@usuario.Nome</td>
                <td>@usuario.Email</td>
                <td>@(usuario.DataNascimento?.ToString("dd/MM/yyyy") ?? "Sem data")</td>
            </tr>
        }
    </tbody>
</table>
</body>
</html>